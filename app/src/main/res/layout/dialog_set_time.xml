<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set work time"/>

    <RelativeLayout
        android:id="@+id/rl_work"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/minus_work"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="28dp"
            android:text="-"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/number_of_time_period"
            android:background="@drawable/border_plusminus"
            android:textStyle="bold"/>

        
        <TextView
            android:id="@+id/number_of_time_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="72sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="40"/>

        <Button
            android:id="@+id/plus_work"
            android:layout_width="28dp"
            android:layout_marginStart="28dp"
            android:layout_height="28dp"
            android:layout_toEndOf="@+id/number_of_time_period"
            android:text="+"
            android:layout_centerVertical="true"
            android:background="@drawable/border_plusminus"
            android:textStyle="bold"/>

    </RelativeLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set pause time"/>


    <RelativeLayout
        android:id="@+id/rl_pause"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/minus_pause"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="28dp"
            android:text="-"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/number_of_time_period_pause"
            android:background="@drawable/border_plusminus"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/number_of_time_period_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="72sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="20"/>

        <Button
            android:id="@+id/plus_pause"
            android:layout_width="28dp"
            android:layout_marginStart="28dp"
            android:layout_height="28dp"
            android:layout_toEndOf="@+id/number_of_time_period_pause"
            android:text="+"
            android:layout_centerVertical="true"
            android:background="@drawable/border_plusminus"
            android:textStyle="bold"/>

    </RelativeLayout>





</LinearLayout>